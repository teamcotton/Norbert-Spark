{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "react", "react-dom"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@norberts-spark/shared": ["../../packages/shared/src/index.ts"],
      "@@norberts-spark/shared/*": ["../../packages/shared/src/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "reset.d.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
